{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-extra-parens": [ "warn" ],
        "curly": [ "warn" ],
        "dot-notation": [ "warn" ],
        "no-empty-function": "off",
        "@typescript-eslint/no-empty-function": [
            "error", { "allow": [ "constructors" ] }
        ],
        "max-len": [ "error", { "code": 100, "ignorePattern": "^import .*", "ignoreStrings": true, "ignoreComments": true } ]
    }
}

